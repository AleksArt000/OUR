[info]
name = efivar
version = 37
type = src
url = https://github.com/rhboot/efivar/releases/download/$version/$name-$version.tar.bz2

[description]
Tools and library to manipulate EFI variables

[dependencies]
popt

[makedeps]
pkg-config
wget
make

[download]
wget $URL
tar -xf $NAME-$VERSION.tar.bz2

[install]
make -j1
make libdir=/usr/lib DESTDIR=$BUILD_ROOT install

