[info]
name = freetype
version = 2.10.4
url = https://downloads.sourceforge.net/freetype/freetype-$version.tar.xz
type = src

[description]
Font rasterization library

[dependencies]
libpng

[makedeps]
pkg-config
curl
make

[download]
curl $URL | tar -xvz

[install]
./configure --prefix=/usr --enable-freetype-config --disable-static
make
make DESTDIR=$BUILD_ROOT install
