[info]
name = openssl
version = 1.1.1d
type = src
url = https://www.openssl.org/source/openssl-1.1.1d.tar.gz

[download]
curl $URL | tar -xz

[install]
./config --prefix=/usr         \
         --openssldir=/etc/ssl \
         --libdir=lib          \
         shared                \
         zlib-dynamic
make
sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
make MANSUFFIX=ssl DESTDIR=$BUILD_ROOT install
