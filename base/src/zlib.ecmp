[info]
name = zlib
version = 1.3
type = src
url = https://zlib.net/$NAME-$VERSION.tar.xz
sha256 = dd16fb1d67bfab79a72f5e8390735c49e3e8e70b4945a15ab1f81ddb78658fb3

[description]
Compression and decompression routines used by some programs

[download]
curl -o $NAME-$VERSION.tar.gz $URL 
tar -xf $NAME-$VERSION.tar.gz

[install]
./configure --prefix=/usr
make $MAKE_FLAGS
make DESTDIR=$BUILD_ROOT install
ln -sfv ../../lib/$(readlink $BUILD_ROOT/usr/lib/libz.so) $BUILD_ROOT/usr/lib/libz.so

