[info]
name = lxmenu-data
version = 0.1.5
url = https://downloads.sourceforge.net/lxde/lxmenu-data-0.1.5.tar.xz

[description]
The LXMenu Data package provides files required to build freedesktop.org menu spec-compliant desktop menus for LXDE.

[download]
curl $URL | tar -xf lxmenu-data-0.1.5.tar.xz | cd lxmenu-data-0.1.5

[install]
./configure --prefix=/usr --sysconfdir=/etc && make 
sudo make install

[locations]
/etc/xdg/menus
/usr/share/desktop-directories
