[info]
name = dbus-glib
type = src
version = 0.112
url = https://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-0.112.tar.gz

[dependencies]
dbus
glib 

[description]
 The D-Bus GLib package contains GLib interfaces to the D-Bus API.

[install]
wget $URL 
tar -xf dbus-glib-0.112.tar.gz
cd dbus-glib-0.112
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-static &&
make
make install 

