[info] 
name = expat
version = 2.2.10
type = src
url = https://sourceforge.net/projects/expat/files/expat/$version/expat-$version.tar.bz2

[makedeps]
automake
autoconfig
make
git

[description] # package description , it can be on multiple lines and we support makdown
A stream oriented C library for parsing XML


[download]
git clone $URL 
mv $NAME $NAME-$VERSION

[install]
cd $name-$version
# fix a problem with the regression tests
sed -i 's|usr/bin/env |bin/|' run.sh.in
./configure --prefix=/usr --disable-static
make
make DESTDIR=$BUILD_ROOT install
rm -r $BUILD_ROOT/usr/share/doc

[special] # a script to run after the package is installed
echo "the package is installed"
echo "done..."

[locations] # the locations of the files installed by the package
usr/bin/xmlwf
usr/include/expat.h
usr/include/expat_config.h
usr/include/expat_external.h
usr/lib/libexpat.so
usr/lib/libexpat.so.1
usr/lib/libexpat.so.1.6.12
usr/lib/pkgconfig/
usr/lib/pkgconfig/expat.pc