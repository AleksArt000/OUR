[info]
name = jansson
type = src
version = 2.14
url = https://github.com/akheron/jansson/releases/download/v2.14/jansson-2.14.tar.bz2

[description]
The Jansson package contains a library used to encode, decode, and manipulate JSON data.

[install]
wget $URL 
tar -xf jansson-2.14.tar.bz2
cd jansson-2.14
sed -e "/DT/s;| sort;| sed 's/@@libjansson.*//' &;" \
    -i test/suites/api/check-exports
./configure --prefix=/usr --disable-static &&
make
make install
