[info]
name = enchant
type = src
version = 2.3.3 
url = https://github.com/AbiWord/enchant/releases/download/v2.3.3/enchant-2.3.3.tar.gz

[dependencies]
glib
aspell
dbus-glib

[description]
The enchant package provides a generic interface into various existing spell checking libraries.

[install]
wget $URL 
tar -xf enchant-2.3.3.tar.gz
cd enchant-2.3.3.tar.gz
./configure --prefix=/usr --disable-static && make 
make install

[locations]
/usr/include/enchant-2/ 
/usr/lib/enchant-2/ 
/usr/share/enchant/ 
