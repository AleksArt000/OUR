[info]
name = exempi
type = src
version = 2.6.3 
url = https://libopenraw.freedesktop.org/download/exempi-2.6.3.tar.xz

[dependencies]
boost

[description]
Exempi is an implementation of XMP (Adobe's Extensible Metadata Platform).

[install]
wget $URL 
tar -xf exempi-2.6.3.tar.xz 
cd exempi-2.6.3 
./configure --prefix=/usr --disable-static &&
make
make install 

[locations]
/usr/include/exempi-2.0/ 
