[info]
name = gspell
type = src
version = 1.12.0
url = https://download.gnome.org/sources/gspell/1.12/gspell-1.12.0.tar.xz

[dependencies]
enchant
icu
gtk3
gobject-introspection

[description]
 The gspell package provides a flexible API to add spell checking to a GTK+ application.

[install]
wget $URL 
tar -xf gspell-1.12.0.tar.xz
cd gspell-1.12.0
./configure --prefix=/usr && make
make install 

[locations]
/usr/include/gspell-1/ 

