[info]
name = openssl-devel
version = 1.1.1t
type = src
url = idk

[makedeps]
pkg-config
curl
make

[download]
curl $URL | tar -xz

[install]
./config --prefix=/usr         \
         --openssldir=/etc/ssl \
         --libdir=lib          \
         shared                \
         zlib-dynamic
make
sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
make MANSUFFIX=ssl DESTDIR=$BUILD_ROOT install

[locations]
