# basic information about the package
[info]
name = openssl
version = 1.0.2k
type = src
license = Apache-2.0
url = https://openssl.org/source/openssl-$VERSION.tar.gz

# package description
[description]
OpenSSL is an open-source implementation of the SSL and TLS protocols, providing encrypted communication and secure authentication for a wide range of applications.

# the dependencies version support operators are: =, '<','>','<=','>='.
[dependencies]
zlib
perl

# the dependencies needed to build the package
[makedeps]
make
gcc

# this is basically a bash script to install the package
[install]
wget $URL
tar -xzvf openssl-$VERSION.tar.gz
cd openssl-$VERSION
./config --prefix=/usr         \
         --openssldir=/etc/ssl \
         --libdir=lib          \
         shared                \
         zlib-dynamic &&
make depend           &&
make -j1

sudo make MANDIR=/usr/share/man MANSUFFIX=ssl install &&
sudo install -dv -m755 /usr/share/doc/openssl-$VERSION  &&
sudo cp -vfr doc/*     /usr/share/doc/openssl-$VERSION

# a script to run after the package is installed
[special]
echo "the openssl package is installed"
echo "done..."

# the locations of the files installed by the package
[locations]
/usr/bin/openssl
/usr/include/openssl
/usr/lib/openssl
