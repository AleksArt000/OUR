[info]
name = sofetch
version = 0.0.2
type = src
license = GPL-v3.0
url = https://github.com/Soviet-Linux/sofetch/releases/download/0.0.4/setup-linux.py

[description]
A cross-platform distro and os grabber like neofetch written in python for soviet-linux but also for other systems. 

[dependencies]
python2
python3
python-pip

[install]
cd /tmp/
wget $URL
python setup-linux.py -soviet

[locations]
/etc/sofetchconf
/usr/bin/sofetch
/usr/bin/ascii.py
