[info]
name = soshell
type = src
version = 0.0.1
lisence = GPL-v3.0
url = https://github.com/Soviet-Linux/soshell/archive/refs/tags/0.0.2.tar.gz

[description]
A minimal shell in c

[makedeps]
gcc
make

[install]
cd tmp
wget $URL
tar -xf soshell-0.0.2.tar.gz
cd soshell-0.0.2
make
make install

[locations]
/usr/bin/soshell
