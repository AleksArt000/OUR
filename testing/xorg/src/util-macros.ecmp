[info]
name = util-macros
type = src
version = 1.19.3
url = https://www.x.org/pub/individual/util/util-macros-1.19.3.tar.bz2

[dependencies]
xorgbuildenv

[description]
 The util-macros package contains the m4 macros used by all of the Xorg packages. 

[install]
wget $URL
tar -xf util-macros-1.19.3.tar.bz2
./configure $XORG_CONFIG
make install

[locations]
/xorg/share/pkgconfig
/xorg/share/util-macros
