[info]
name = libogg
type = src
version = 1.3.5
url = https://downloads.xiph.org/releases/ogg/libogg-1.3.5.tar.xz

[description]
 The libogg package contains the Ogg file structure. This is useful for creating (encoding) or playing (decoding) a single physical bit stream.

[install] 
wget $URL 
tar -xf libogg-1.3.5.tar.xz
cd libogg-1.3.5
./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/libogg-1.3.5 &&
make
make install

[locations]
/usr/include/ogg/ 
