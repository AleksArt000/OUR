[info]
name = thunar-volman
type = src
version = 4.18.0
url = https://archive.xfce.org/src/xfce/thunar-volman/4.18/thunar-volman-4.18.0.tar.bz2

[description]
The Thunar Volume Manager is an extension for the Thunar file manager, which enables automatic management of removable drives and media. 

[dependencies]
exo
libgudev

[install]
wget $URL
tar -xf thunar-volman-4.18.0.tar.bz2
cd thunar-volman-4.18.0
./configure --prefix=/usr && make
make install
