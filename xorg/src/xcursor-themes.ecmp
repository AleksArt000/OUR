[info]
name = xcursor-themes
type = src
version = 1.0.6
url = https://www.x.org/pub/individual/data/xcursor-themes-1.0.6.tar.bz2

[dependencies]
xorgapps

[description]
The xcursor-themes package contains the redglass and whiteglass animated cursor themes. 

[install]
wget $URL
tar -xf xcursor-themes-1.0.6.tar.bz2
cd xcursor-themes-1.0.6
./configure $XORG_CONFIG &&
make
make install
